@model OJTMApp.Models.ViewModel.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}


<div class="row">
    <div class="col-3"></div>
    <div class="col-6">
        <h2>會員註冊</h2>
        <form asp-action="register">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="mb-3 row">
                <label asp-for="Name" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <input asp-for="Name" class="form-control">
                    <span asp-validation-for="Name"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <label asp-for="Email" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <input asp-for="Email" class="form-control">
                    <span asp-validation-for="Email"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <label asp-for="Password" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <input asp-for="Password" class="form-control">
                    <span asp-validation-for="Password"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <label asp-for="ConfirmPassword" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <input asp-for="ConfirmPassword" class="form-control">
                    <span asp-validation-for="ConfirmPassword"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <label asp-for="Age" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <input asp-for="Age" class="form-control">
                    <span asp-validation-for="Age"></span>
                </div>
            </div>

            <button class="btn btn-primary">送出</button>
        </form>
        <p>@ViewBag.Message</p>
    </div>
    <div class="col-3"></div>
</div>


 @section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
} 

