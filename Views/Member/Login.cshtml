
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>
<!--?name=value&name=value-->
<!-- method 屬性如果沒有給，預設就是 GET-->
<!-- action 屬性如果沒有給，預設就是將資料傳給自己 -->
<!-- enctype 屬性如果沒有，預設就是 application/x-www-form-urlencoded-->
<!-- 檔案上傳<input type="file" ... /> 時要把 enctype = "multipart/form-data"  -->
<form method="POST">
<input type="text" name="userName" placeholder="帳號" />
<input type="password" name="userPassword"  placeholder="密碼" />
<button>登入</button>
</form>
<hr />
<p>@ViewBag.Message</p>

