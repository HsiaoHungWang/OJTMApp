@model IEnumerable<OJTMApp.Models.ViewModel.CustomerOrdersViewModel>
@{
    ViewData["Title"] = "Query2";
}

<h1>Query2</h1>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>CustomerId</th>
            <th>CompanyName</th>
            <th>TotalOrders</th>
            <th>TotalAmount</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {

            <tr>
                <td>@order.CustomerId</td>
                <td>@order.CompanyName</td>
                <td>
                    @order.TotalOrders
                </td>
                <td>
                    @order.TotalAmount
                </td>
            </tr>
        }
    </tbody>
</table>
